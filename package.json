{
  "private": true,
  "scripts": {
    "start": "umi dev",
    "build": "umi build",
    "postinstall": "umi generate tmp",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "immer": "^9.0.6",
    "react": "17.x",
    "react-dom": "17.x",
    "styled-components": "^5.3.1",
    "umi": "^3.5.19",
    "use-immer": "^0.6.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/styled-components": "^5.1.14",
    "@umijs/fabric": "^2.8.0",
    "@umijs/preset-react": "1.x",
    "@umijs/test": "^3.5.19",
    "lint-staged": "^10.0.7",
    "typescript": "^4.1.2",
    "yorkie": "^2.0.0"
  }
}
